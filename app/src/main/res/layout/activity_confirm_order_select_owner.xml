<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:keepScreenOn="true"
        tools:context=".vehicleOwner.ConfirmOrderSelectOwnerActivity">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/select_vehicle_owner"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp" />

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="Name"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_peoples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/peoples"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name" />


                <TextView
                    android:id="@+id/tv_total_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/total_project"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_peoples" />

                <TextView
                    android:id="@+id/tv_vehicle_owner_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/vehicle_owner_price"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_total_project" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_vehicle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_owner_price"
                    android:background="@drawable/rectangle_bg_gray_8_dp" />

                <TextView
                    android:id="@+id/tv_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/vehicle_jem"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_owner_price" />


                <ImageView
                    android:id="@+id/iv_vehicle_image"
                    android:layout_width="@dimen/_24sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/tv_vehicle"
                    app:layout_constraintTop_toTopOf="@id/tv_vehicle"
                    app:layout_constraintBottom_toBottomOf="@id/tv_vehicle"
                    tools:src="@drawable/ic_state" />

                <TextView
                    android:id="@+id/tv_vehicle_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/_14sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_vehicle_image"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_vehicle"
                    tools:text="Tempo" />

                <TextView
                    android:id="@+id/tv_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/vehicle_type"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_vehicle" />

                <TextView
                    android:id="@+id/tv_luggage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/luggage"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_type" />

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/profile"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_luggage" />

                <TextView
                    android:id="@+id/tv_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/contact_mo_no"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile" />

                <TextView
                    android:id="@+id/tv_last_customer_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    tools:text="@string/last_customer_mo_no"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_no" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_last_customer_no"
                    android:background="@drawable/rectangle_bg_gray_8_dp" />


                <TextView
                    android:id="@+id/tv_vehicle_owner_proofs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rectangle_bg_gray_8_dp"
                    android:text="@string/vehicle_owners_proof_jem"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/textGray"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_last_customer_no" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>


</layout>